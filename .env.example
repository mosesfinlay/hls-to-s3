AWS_REGION=us-west-2
S3_BUCKET=your-bucket-name
S3_PREFIX=recordings           # will upload to s3://your-bucket-name/recordings/
PUBLIC_ACL=false                # true -> objects public-read; false -> private (use CloudFront+OAC)

# Sync behavior
SYNC_INTERVAL_SECONDS=30       # how often the sidecar syncs MP4 files (less frequent than HLS)
RECORDINGS_DIR=/recordings     # container path (don't change)
MP4_MAXAGE=86400               # Cache-Control for *.mp4 (seconds) - 24 hours
